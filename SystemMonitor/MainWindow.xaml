<Window x:Class="SystemMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemMonitor"
        mc:Ignorable="d"
        Title="Monitor" Height="600" Width="800">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Grid.ColumnSpan="2" Margin="0,35,503.6,88.4">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" VerticalAlignment="Center">
                <Ellipse Stroke="#333333" StrokeThickness="15" Width="160" Height="160"/>
                <Ellipse Name="GaugeEllipse" Stroke="Lime" StrokeThickness="15" Width="160" Height="160"
                 StrokeDashArray="0 9999" RenderTransformOrigin="0.5,0.5">
                    <Ellipse.RenderTransform>
                        <RotateTransform Angle="-90"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Name="GaugeText" Text="0" FontSize="35" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="CPU" FontSize="10" Foreground="Gray" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" VerticalAlignment="Center">
                <Ellipse Stroke="#333333" StrokeThickness="15" Width="160" Height="160"/>
                <Ellipse Name="RamGaugeEllipse" Stroke="LemonChiffon" StrokeThickness="15" Width="160" Height="160"
                 StrokeDashArray="0 9999" RenderTransformOrigin="0.5,0.5">
                    <Ellipse.RenderTransform>
                        <RotateTransform Angle="-90"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Name="RamGaugeText" Text="0" FontSize="35" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="MEMORY" FontSize="10" Foreground="Gray" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <TextBlock Name="TxtMin" Text="Min: 0%" Margin="10,0" Foreground="blue"/>
            <TextBlock Name="TxtAvg" Text="Avg: 0%" Margin="10,0" Foreground="black"/>
            <TextBlock Name="TxtMax" Text="Max: 0%" Margin="10,0" Foreground="OrangeRed"/>
        </StackPanel>
        <StackPanel Grid.Row="1" VerticalAlignment="Bottom" Margin="20,0,20,20">
    
    <TextBlock Text="GPU Usage" FontSize="11" Foreground="Gray" Margin="0,0,0,3"/>
    <Grid Margin="0,0,0,10">
        <ProgressBar Name="GpuBar" Height="12" Value="0" Maximum="100" 
                     Background="#333" Foreground="SkyBlue" BorderThickness="0"/>
        <TextBlock Name="GpuText" Text="0%" FontSize="9" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
    </Grid>

    <TextBlock Text="Network Speed" FontSize="11" Foreground="Gray" Margin="0,0,0,3"/>
    <Grid>
        <ProgressBar Name="NetBar" Height="12" Value="0" Maximum="100" 
                     Background="#333" Foreground="LightPink" BorderThickness="0"/>
        <TextBlock Name="NetText" Text="0 MB/s" FontSize="9" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
    </Grid>
    
</StackPanel>

        <Grid Grid.Column="1" Margin="20,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="180" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Name="CpuText" DockPanel.Dock="Top" Text="수신 대기 중..." 
                   Foreground="black" FontSize="18" Margin="0,0,0,10"/>

                <Border BorderBrush="#333333" BorderThickness="1">
                    <Canvas Name="GraphCanvas" Background="Black" ClipToBounds="True" SizeChanged="GraphCanvas_SizeChanged">
                        <Polyline Name="CpuLine" Stroke="Lime" StrokeThickness="2"/>
                    </Canvas>
                </Border>
            </DockPanel>

            <GroupBox Header="시스템 로그" Grid.Row="1">
                <ListBox Name="LogList" Background="#222" Foreground="White" 
                 FontSize="11" BorderThickness="0">
                </ListBox>
            </GroupBox>
        </Grid>
    </Grid>


</Window>
