<Window x:Class="SystemMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemMonitor"
        mc:Ignorable="d"
        Title="Monitor" Height="600" Width="800">
    <Grid Background="#121212">
        <TabControl x:Name="MainTabs" Background="Transparent" BorderThickness="0" Margin="5">

            <TabItem Header="DASHBOARD" Width="120" Height="35">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <GroupBox Header="CPU" Foreground="Cyan" Margin="5">
                        <Viewbox>
                            <Grid>
                                <Ellipse Stroke="#222" StrokeThickness="10" Width="200" Height="200"/>
                                <Ellipse x:Name="GaugeEllipse" Stroke="Cyan" StrokeThickness="20" Width="200" Height="200" 
                                     StrokeDashArray="0, 1000"/>
                                <TextBlock x:Name="GaugeText" Text="0" Foreground="White" FontSize="40" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>
                        </Viewbox>
                    </GroupBox>

                    <GroupBox Header="MEMORY" Foreground="Lime" Margin="5" Grid.Column="1">
                        <Viewbox>
                            <Grid>
                                <Ellipse Stroke="#222" StrokeThickness="10" Width="200" Height="200"/>
                                <Ellipse x:Name="RamGaugeEllipse" Stroke="Lime" StrokeThickness="20" Width="200" Height="200" 
                                     StrokeDashArray="0, 1000"/>
                                <TextBlock x:Name="RamGaugeText" Text="0" Foreground="White" FontSize="40" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>
                        </Viewbox>
                    </GroupBox>

                    <StackPanel Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="10">
                        <TextBlock Text="GPU" Foreground="Orange" Margin="0,0,0,5"/>
                        <ProgressBar x:Name="GpuBar" Height="20" Maximum="100" Foreground="Orange" Background="#222"/>
                        <TextBlock x:Name="GpuText" Text="0%" Foreground="White" HorizontalAlignment="Right"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="10">
                        <TextBlock Text="NETWORK" Foreground="Pink" Margin="0,0,0,5"/>
                        <ProgressBar x:Name="NetBar" Height="20" Maximum="100" Foreground="Pink" Background="#222"/>
                        <TextBlock x:Name="NetText" Text="0.0 MB/s" Foreground="White" HorizontalAlignment="Right"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                        <TextBlock x:Name="TxtMin" Text="Min: 0%" Foreground="Gray" Margin="10,0"/>
                        <TextBlock x:Name="TxtMax" Text="Max: 0%" Foreground="Gray" Margin="10,0"/>
                        <TextBlock x:Name="TxtAvg" Text="Avg: 0%" Foreground="Gray" Margin="10,0"/>
                        <TextBlock x:Name="CpuText" Text="System Ready" Foreground="Cyan" Margin="10,0"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="DETAILED GRAPHS">
                <UniformGrid Columns="2" Rows="2" Margin="10">
                    <GroupBox Header="CPU History" Foreground="Cyan">
                        <Canvas x:Name="CpuGraphCanvas" SizeChanged="GraphCanvas_SizeChanged" Background="#0A0A0A">
                            <Polyline x:Name="CpuLine" Stroke="Cyan" StrokeThickness="2"/>
                        </Canvas>
                    </GroupBox>

                    <GroupBox Header="RAM History" Foreground="Lime">
                        <Canvas x:Name="RamGraphCanvas" SizeChanged="GraphCanvas_SizeChanged" Background="#0A0A0A">
                            <Polyline x:Name="RamLine" Stroke="Lime" StrokeThickness="2"/>
                        </Canvas>
                    </GroupBox>

                    <GroupBox Header="GPU History" Foreground="Orange">
                        <Canvas x:Name="GpuGraphCanvas" SizeChanged="GraphCanvas_SizeChanged" Background="#0A0A0A">
                            <Polyline x:Name="GpuLine" Stroke="Orange" StrokeThickness="2"/>
                        </Canvas>
                    </GroupBox>

                    <GroupBox Header="Network History" Foreground="Pink">
                        <Canvas x:Name="NetGraphCanvas" SizeChanged="GraphCanvas_SizeChanged" Background="#0A0A0A">
                            <Polyline x:Name="NetLine" Stroke="Pink" StrokeThickness="2"/>
                        </Canvas>
                    </GroupBox>
                </UniformGrid>
            </TabItem>

            <TabItem Header="LOGS" Width="120">
                <Grid Margin="10">
                    <ListBox x:Name="LogList" Background="#1A1A1A" Foreground="#DDAAAA" BorderBrush="#333" FontFamily="Consolas"/>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>


</Window>
