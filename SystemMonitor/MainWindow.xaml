<Window x:Class="SystemMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemMonitor"
        mc:Ignorable="d"
        Title="Monitor" Height="600" Width="800">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" VerticalAlignment="Center">
            <Ellipse Stroke="#333333" StrokeThickness="20" Width="200" Height="200"/>
            <Ellipse Name="GaugeEllipse" 
                     Stroke="Lime" StrokeThickness="20" 
                     Width="200" Height="200"
                     StrokeDashArray="0 9999"
                     RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <RotateTransform Angle="-90"/>
                </Ellipse.RenderTransform>
            </Ellipse>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Name="GaugeText" Text="0" FontSize="45" FontWeight="Bold" Foreground="black" HorizontalAlignment="Center"/>
                <TextBlock Text="CPU USAGE" FontSize="12" Foreground="Gray" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <TextBlock Name="TxtMin" Text="Min: 0%" Margin="10,0" Foreground="blue"/>
            <TextBlock Name="TxtAvg" Text="Avg: 0%" Margin="10,0" Foreground="black"/>
            <TextBlock Name="TxtMax" Text="Max: 0%" Margin="10,0" Foreground="OrangeRed"/>
        </StackPanel>

        <Grid Grid.Column="1" Margin="20,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="180" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Name="CpuText" DockPanel.Dock="Top" Text="수신 대기 중..." 
                   Foreground="black" FontSize="18" Margin="0,0,0,10"/>

                <Border BorderBrush="#333333" BorderThickness="1">
                    <Canvas Name="GraphCanvas" Background="Black" ClipToBounds="True" SizeChanged="GraphCanvas_SizeChanged">
                        <Polyline Name="CpuLine" Stroke="Lime" StrokeThickness="2"/>
                    </Canvas>
                </Border>
            </DockPanel>

            <GroupBox Header="시스템 로그" Grid.Row="1">
                <ListBox Name="LogList" Background="#222" Foreground="White" 
                 FontSize="11" BorderThickness="0">
                </ListBox>
            </GroupBox>
        </Grid>
    </Grid>


</Window>
